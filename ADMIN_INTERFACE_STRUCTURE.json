{
  "MAIN_PRODUCT_FORM": {
    "page": "/admin/add-product",
    "purpose": "Creates ONLY the main product document",
    "fields": [
      {
        "name": "name",
        "type": "text",
        "required": true,
        "label": "Product Name"
      },
      {
        "name": "price",
        "type": "number",
        "required": true,
        "label": "Price ($)"
      },
      {
        "name": "category",
        "type": "select",
        "required": true,
        "label": "Category"
      },
      {
        "name": "stockQuantity",
        "type": "number",
        "required": true,
        "label": "Stock Quantity"
      },
      {
        "name": "mainImage",
        "type": "url",
        "required": true,
        "label": "Main Image URL"
      },
      {
        "name": "images",
        "type": "textarea",
        "required": false,
        "label": "Additional Images (comma-separated URLs)"
      },
      {
        "name": "description",
        "type": "textarea",
        "required": true,
        "label": "Description"
      },
      {
        "name": "tags",
        "type": "text",
        "required": false,
        "label": "Tags (comma-separated)"
      }
    ],
    "autoGeneratedFields": [
      "createdAt",
      "updatedAt",
      "inStock"
    ],
    "onSubmitRedirect": "/admin/products/{productId}/manage"
  },
  "PRODUCT_DETAILS_MANAGEMENT": {
    "page": "/admin/products/{productId}/manage",
    "purpose": "Manages sub-collections AFTER product creation",
    "tabs": [
      {
        "id": "specifications",
        "label": "Specifications",
        "form": {
          "collection": "specifications",
          "fields": [
            {
              "name": "nutrient",
              "type": "text",
              "required": true
            },
            {
              "name": "percentage",
              "type": "text",
              "required": true
            },
            {
              "name": "source",
              "type": "text",
              "required": true
            }
          ]
        }
      },
      {
        "id": "usage",
        "label": "Usage Guide",
        "form": {
          "collection": "usageGuide",
          "fields": [
            {
              "name": "stepNumber",
              "type": "number",
              "required": true
            },
            {
              "name": "title",
              "type": "text",
              "required": true
            },
            {
              "name": "description",
              "type": "textarea",
              "required": true
            }
          ]
        }
      },
      {
        "id": "dosage",
        "label": "Dosage",
        "form": {
          "collection": "dosage",
          "fields": [
            {
              "name": "plantType",
              "type": "text",
              "required": true
            },
            {
              "name": "amount",
              "type": "text",
              "required": true
            },
            {
              "name": "frequency",
              "type": "text",
              "required": true
            }
          ]
        }
      },
      {
        "id": "safety",
        "label": "Safety",
        "form": {
          "collection": "safety",
          "fields": [
            {
              "name": "title",
              "type": "text",
              "required": true
            },
            {
              "name": "description",
              "type": "textarea",
              "required": true
            }
          ]
        }
      },
      {
        "id": "visual",
        "label": "Visual Guide",
        "form": {
          "collection": "visualGuide",
          "fields": [
            {
              "name": "image",
              "type": "url",
              "required": true
            },
            {
              "name": "caption",
              "type": "text",
              "required": true
            }
          ]
        }
      }
    ]
  }
}
